@model Semana16.Models.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        #login-div{
            position:absolute;
            left:40%;
            top:40%;
            border:1px solid #ccc;
            padding: 10px 10px;
        }
        .field-validation-error{
            color:red;
        }
    </style>
</head>
<body>
    <div id="login-div">
        @using (Html.BeginForm("Autorizacion", "Login", FormMethod.Post))
        {
            <table>
                <tr>
                    <td></td>
                    <td style="text-decoration:underline">Trabajo Final</td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.UsuarioNom)
                    </td>
                    <td>
                        @Html.EditorFor(model => model.UsuarioNom)
                    </td>
                </tr>

                <tr>
                    <td>@Html.ValidationMessageFor(model => model.UsuarioNom)</td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(model => model.UsuarioContraseña)</td>
                    <td>@Html.EditorFor(model => model.UsuarioContraseña)</td>
                </tr>

                <tr>
                    <td>@Html.ValidationMessageFor(model => model.UsuarioContraseña)</td>
                </tr>

                <tr>
                    <td colspan="2">    
                        <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMensaje)</label>
                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td>
                        <input type="submit" name="name" value="Login" />
                    </td>
                </tr>
            </table>
        }
    </div>

</body>
</html>
